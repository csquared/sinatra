#!/bin/sh

export POSTGRES_URL="postgres://${POSTGRES_ENV_POSTGRES_USER}:${POSTGRES_ENV_POSTGRES_PASSWORD}@${POSTGRES_PORT_5432_TCP_ADDR}:${POSTGRES_PORT_5432_TCP_PORT}/${POSTGRES_ENV_POSTGRES_DATABASE}"
export REDIS_URL="redis://${REDIS_PORT_6379_TCP_ADDR}:${REDIS_PORT_6379_TCP_PORT}/${REDIS_ENV_REDIS_DATABASE}"

# wait for database
while true; do sequel -c 'DB.inspect' $POSTGRES_URL 2>/dev/null && break || sleep 1; done

# execute migrations
sequel -m migrations ${POSTGRES_URL}

bundle exec ruby worker.rb
